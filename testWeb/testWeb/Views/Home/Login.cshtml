
@{
    Layout = "_Layout";
}

@model MatchingSystem.UI.ViewModels.AuthViewModel
<div class="container-fluid">
    <main>
        <div class="row -container">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Вход в систему</h4>
                        <form action=@Url.Action("login", "home") id="login_form" method="post">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Login, new { @class = "form-control-label" })
                                <input class="form-control" data-val="true" data-val-required="Требуется поле Login" id="Login" name="Login" type="text">
                                @Html.ValidationMessageFor(model => model.Login, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, new { @class = "form-control-label" })
                                <input class="form-control" data-val="true" data-val-required="Требуется поле Password" id="Password" name="Password" type="password">
                                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
                            </div>
                            <div class="row">
                                <div class="col-8"></div>
                                <div class="col-4">
                                    <button type="submit" class="btn btn-primary btn-block" form="login_form">Вход</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
            <div class="col-3"></div>
        </div>
    </main>
</div>